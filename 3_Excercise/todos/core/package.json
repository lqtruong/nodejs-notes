{
  "name": "todos",
  "version": "1.0.0",
  "description": "TODOs example with Node.js",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsc -p ./",
    "build-watch": "tsc-watch",
    "start": "tsc-watch --onSuccess && node ./dist/src/index.js",
    "start--prod": "npm run build && node ./dist/src/index.js",
    "docker:start": "docker-compose up",
    "docker:stop": "docker-compose down -v --remove-orphans"
  },
  "keywords": [
    "todos",
    "example",
    "with",
    "node.js"
  ],
  "author": "Le Quoc Truong",
  "license": "MIT",
