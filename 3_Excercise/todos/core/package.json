    "@hapi/boom": "^9.1.2",
    "@hapi/hapi": "^20.1.2",
    "@hapi/inert": "^6.0.3",
    "@hapi/joi": "^17.1.1",
    "@hapi/vision": "^6.0.1",
    "dotenv": "^8.2.0",
    "hapi-swagger": "^14.1.2",
    "typescript": "^4.2.4",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/hapi__boom": "^9.0.1",
    "@types/hapi__hapi": "^20.0.8",
    "@types/hapi__inert": "^5.2.2",
